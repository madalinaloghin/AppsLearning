<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/material_keyline_1"
              android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_sample_height"
        android:layout_marginLeft="@dimen/material_keyline_1"
        android:layout_marginRight="@dimen/material_keyline_1"
        app:cardBackgroundColor="@android:color/holo_red_light"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="@string/sample_text_short"
            android:textColor="@android:color/white" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="@dimen/cardview_sample_height"
                                        app:cardCornerRadius="6dp"
                                        app:cardElevation="4dp"
                                        app:cardBackgroundColor="@android:color/holo_green_light"
                                        android:layout_marginLeft="@dimen/material_keyline_1"
                                        android:layout_marginRight="@dimen/material_keyline_1"
                                        android:layout_marginTop="@dimen/space_between_multiple_fields">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/white"
                  android:text="@string/sample_text_short"
                  android:layout_margin="20dp"
                  android:layout_gravity="center"
                  android:gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="@dimen/cardview_sample_height"
                                        app:cardCornerRadius="6dp"
                                        app:cardElevation="4dp"
                                        app:cardBackgroundColor="@android:color/holo_blue_light"
                                        android:layout_marginLeft="@dimen/material_keyline_1"
                                        android:layout_marginRight="@dimen/material_keyline_1"
                                        android:layout_marginTop="@dimen/space_between_multiple_fields">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/white"
                  android:text="@string/sample_text_short"
                  android:layout_margin="20dp"
                  android:layout_gravity="center"
                  android:gravity="center"/>

    </android.support.v7.widget.CardView>
</LinearLayout>