<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:ignore="RtlHardcoded">

    <TextView
            android:id="@+id/tv_item_contact_prefix"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/circular_shape"
            tools:text="P"/>

    <TextView
            android:id="@+id/tv_item_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_item_contact_prefix"
            tools:text="Popescu Marian"/>

    <TextView
            android:id="@+id/tv_item_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textStyle="italic"
            android:layout_alignLeft="@id/tv_item_contact_name"
            android:layout_below="@id/tv_item_contact_name"
            tools:text="0775165174"/>

    <TextView
            android:id="@+id/tv_item_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/tv_item_contact_phone"
            android:layout_alignLeft="@id/tv_item_contact_phone"
            tools:text="popescu.marian@gmail.com"/>

</RelativeLayout>